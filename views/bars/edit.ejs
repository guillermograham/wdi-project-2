<h2>Edit</h2>

<div class="container">
  <div class="editBar">
    <form method="POST" action="/bars/<%= bar.id %>">

      <input type="hidden" name="_method" value="PUT">

      <div class="row">
        <div class="col-lg-6">
          <div class="row">
            <div class="col-lg-10">
              <%# <label>Name</label> %>
              <input type="text" id="inputBarName" class="form-control" placeholder="Name of bar" name="name" value="<%= bar.name %>">
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-2 mb-3">
              <%# <label for="inputDoorNumber">Door number</label> %>
              <input type="text" class="form-control" id="inputDoorNumber" placeholder="Door number" name="address[line1]" value="<%= bar.address.line1 %>">
            </div>
            <div class="col-lg-6 col-md-3 mb-3">
              <%# <label for="inputStreet">Street</label> %>
              <input type="text" class="form-control" id="inputStreet" placeholder="Street" name="address[line2]" value="<%= bar.address.line2 %>" required>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-3 mb-3">
              <%# <label for="inputCity">Town/City</label> %>
              <input type="text" class="form-control" id="inputCity" placeholder="Town/City" name="address[city]" value="<%= bar.address.city %>" required>
            </div>
            <div class="col-lg-4 col-md-3 mb-3">
              <%# <label for="inputPostcode">Postcode</label> %>
              <input type="number" class="form-control" id="inputPostcode" placeholder="Postcode" name="address[postcode]" value="<%= bar.address.postcode %>" required>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-10 col-md-2 mb-3">
              <%# <label for="inputWebsite">Website</label> %>
              <input type="text" class="form-control" id="inputWebsite" placeholder="Website" name="website" value="<%= bar.website %>">
            </div>
          </div>
          <div class="row">
            <div class="col-lg-10">
              <%# <label for="inputDescription">Description</label> %>
              <textarea class="form-control" id="inputDescription" rows="6" placeholder="A brief description of the bar" name="description" value="<%= bar.description %>"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-10">
              <input type="text" class="form-control" name="imageOne" placeholder="Add a photo of the bar" value="<%= bar.imageOne %>">
            </div>
          </div>
          <div class="row">
            <div>
              <%# <label for="lat">Latitude</label> %>
              <input type="hidden" name="address[lat]" id="lat" value="<%= bar.address.lat %>" required>
            </div>
            <div>
              <%# <label for="lng">Longitude</label> %>
              <input type="hidden" name="address[lng]" id="lng" value="<%= bar.address.lng %>" required>
            </div>
          </div>
                <button class="btn btn-primary col-lg-5">Submit</button>
        </div>
        <div class="col-lg-6">
          <div class="map">

          </div>
        </div>


      </div>




    </form>
    <div class="map">

    </div>
  </div>

</div>
