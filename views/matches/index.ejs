<h2>Matches</h2>
<div class="container">
  <div class="row">
    <% matches.forEach((match) => { %>
      <div class="card" style="width: 18rem;">
        <div class="card-header competition">
          <span><i class="fa fa-futbol-o" aria-hidden="true"></i> </span><span><%= match.competition %></span>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item date"><span><%= moment(match.date).format('h:mm a') %> &#8226;</span><span> <%= moment(match.date).format('Do MMM YYYY') %></span></li>
          <li class="list-group-item team"><p><%= match.homeTeam %></p></li>
          <li class="list-group-item team"><p><%= match.awayTeam %></p></li>
          <li class="list-group-item"><a href="/matches/<%= match.id %>">View Match</a></li>
          <li class="list-group-item"><a href="/matches/<%= match.id %>/new">Show this match</a></li>
        </ul>
      </div>
    <% }) %>
  </div>
</div>
<a href="/matches/new">Add new match</a>
